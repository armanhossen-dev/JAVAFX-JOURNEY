    <children>
        <Label prefHeight="47.0" prefWidth="66.0" text="Login" textFill="#333333">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="146.0" minWidth="10.0" prefWidth="107.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="296.0" minWidth="10.0" prefWidth="294.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Username:" GridPane.halignment="CENTER" />
                <TextField fx:id="usernameInput" promptText="Enter username" GridPane.columnIndex="1" />
                <Label text="Password:" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                <PasswordField fx:id="passwordInput" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Login As:" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                <ChoiceBox fx:id="userTypeChoiceBox" prefHeight="25.0" prefWidth="294.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <Button onAction="#login" prefHeight="25.0" prefWidth="79.0" text="Login" />
        <Label fx:id="errorLabel" textFill="#ff4444" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
